<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/celesteazul"
    android:padding="5dp"
    android:layout_gravity="center">

    <TextView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:textColor="@android:color/white"
        android:text=""
        android:textStyle="bold"
        android:layout_gravity="end"
        android:gravity="center"
        android:id="@+id/txtpopclosepost"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ingrese su glucosa post prandial"
        android:layout_gravity="center"
        android:textColor="@android:color/white"
        android:textSize="18dp" />
    <Space
        android:layout_width="30dp"
        android:layout_height= "7dp"/>

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:layout_gravity="center"
        android:text="0"
        android:inputType="number"
        android:textColor="@android:color/white"
        android:id="@+id/txtpost"/>
    <Space
        android:layout_width="30dp"
        android:layout_height= "7dp"/>
    <Button
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:id="@+id/btnguardarpost"
        android:background="@drawable/confirmarplatochange"
        android:layout_gravity="center"/>
    <Space
        android:layout_width="30dp"
        android:layout_height= "7dp"/>
    <Button
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:background="@drawable/cancelarplatochange"
        android:layout_gravity="center"
        android:id="@+id/btncancelarpost"/>




</LinearLayout>