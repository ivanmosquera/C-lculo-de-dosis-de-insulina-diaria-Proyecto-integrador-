<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/partesuperioruno"
            android:layout_marginTop="50dp"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:text="Seleccione las casillas y agrega tus datos "
            android:textColor="@color/textonegrita"
            android:textSize="18dp" />
        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="para empezar la creación de tu cuenta "
            android:textColor="@color/textonegrita"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/txtusuario"
            android:layout_width="220dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="18dp"
            android:background="@drawable/usuarion"
            android:ems="10"
            android:hint="Usuario"
            android:paddingLeft="10dp"
            android:inputType="textPersonName"
            android:textColorHint="@color/textonormal"
            />

        <EditText
            android:id="@+id/txtcorreoi"
            android:layout_width="220dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="18dp"
            android:background="@drawable/correo"
            android:ems="10"
            android:hint="Correo"
            android:paddingLeft="10dp"
            android:inputType="textPersonName"
            android:textColorHint="@color/textonormal"
            />

        <EditText
            android:id="@+id/txtpasswordi"
            android:layout_width="220dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="18dp"
            android:background="@drawable/contrasena"
            android:ems="10"
            android:hint="Contraseña"
            android:paddingLeft="10dp"
            android:inputType="textPassword"
            android:textColorHint="@color/textonormal"/>

        <Button
            android:id="@+id/btnsiguiente"
            android:layout_width="220dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/siguientechange"
            android:text="" />

        <Button
            android:id="@+id/btnyatengocuenta"
            android:layout_width="220dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:background="@drawable/otracuentachange"
            android:text="" />


</LinearLayout>