<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fondonuevo"
    >


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="Crea tu Cuenta "
        android:textColor="@android:color/background_light"
        android:textSize="35dp" />

    <EditText
        android:id="@+id/txtusuario"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp"
        android:background="@drawable/botonusuario"
        android:ems="10"
        android:hint="   Usuario"
        android:inputType="textPersonName"
        android:textColorHint="@android:color/background_light"
         />

    <EditText
        android:id="@+id/txtcorreoi"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/txtusuario"
        android:layout_below="@+id/txtusuario"
        android:layout_marginTop="19dp"
        android:background="@drawable/botoncorreo"
        android:ems="10"
        android:hint="  Correo"
        android:inputType="textPersonName"
        android:textColorHint="@android:color/background_light"
         />

    <EditText
        android:id="@+id/txtpasswordi"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/txtcorreoi"
        android:layout_below="@+id/txtcorreoi"
        android:layout_marginTop="23dp"
        android:background="@drawable/botoncontrasenac"
        android:ems="10"
        android:hint="  ContraseÃ±a"
        android:inputType="textPassword"
        android:textColorHint="@android:color/background_light" />

    <EditText
        android:id="@+id/txtedad"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/txtpasswordi"
        android:layout_below="@+id/txtpasswordi"
        android:layout_marginTop="20dp"
        android:background="@drawable/botoncontrasenac"
        android:ems="10"
        android:hint="   Edad"
        android:inputType="textPersonName"
        android:textColorHint="@android:color/background_light" />

    <EditText
        android:id="@+id/txtpeso"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/txtedad"
        android:layout_below="@+id/txtedad"
        android:layout_marginTop="16dp"
        android:background="@drawable/botoncontrasenac"
        android:ems="10"
        android:hint="   Peso"
        android:inputType="textPersonName"
        android:textColorHint="@android:color/background_light" />

    <EditText
        android:id="@+id/txtaltura"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/txtpeso"
        android:layout_below="@+id/txtpeso"
        android:layout_marginTop="22dp"
        android:background="@drawable/botoncontrasenac"
        android:ems="10"
        android:hint="   Altura"
        android:inputType="textPersonName"
        android:textColorHint="@android:color/background_light" />


    <Button
        android:id="@+id/btn_crear_ok"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/txtpeso"
        android:layout_marginBottom="20dp"
        android:background="@drawable/continuar_cuenta"
        android:text="" />




</RelativeLayout>