<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondonuevo"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:text="Crea tu Cuenta "
            android:textColor="@android:color/background_light"
            android:textSize="35dp" />

        <EditText
            android:id="@+id/txtusuario"
            android:layout_width="220dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="18dp"
            android:background="@drawable/botonusuario"
            android:ems="10"
            android:hint="   Usuario"
            android:inputType="textPersonName"
            android:textColorHint="@android:color/background_light"
            />

        <EditText
            android:id="@+id/txtcorreoi"
            android:layout_width="220dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="18dp"
            android:background="@drawable/botoncorreo"
            android:ems="10"
            android:hint="  Correo"
            android:inputType="textPersonName"
            android:textColorHint="@android:color/background_light"
            />

        <EditText
            android:id="@+id/txtpasswordi"
            android:layout_width="220dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="18dp"
            android:background="@drawable/botoncontrasenac"
            android:ems="10"
            android:hint="  ContraseÃ±a"
            android:inputType="textPassword"
            android:textColorHint="@android:color/background_light" />

        <EditText
            android:id="@+id/txtedad"
            android:layout_width="220dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="18dp"
            android:background="@drawable/botonedad"
            android:ems="10"
            android:hint="  Fecha de nacimiento"
            android:focusable="false"
            android:inputType="date"
            android:textColorHint="@android:color/background_light" />

        <EditText
            android:id="@+id/txtpeso"
            android:layout_width="220dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="18dp"
            android:background="@drawable/botonpeso"
            android:ems="10"
            android:hint="   Peso(kg)"
            android:inputType="numberDecimal"
            android:textColorHint="@android:color/background_light" />

        <EditText
            android:id="@+id/txtaltura"
            android:layout_width="220dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="18dp"
            android:background="@drawable/botonaltura"
            android:ems="10"
            android:hint="   Altura(m)"
            android:inputType="numberDecimal"
            android:textColorHint="@android:color/background_light" />
        
        <EditText
            android:id="@+id/txtciudad"
            android:layout_width="220dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="18dp"
            android:background="@drawable/botonciudad"
            android:ems="10"
            android:hint="   Ciudad"
            android:inputType="textPersonName"
            android:textColorHint="@android:color/background_light" />
        <EditText
            android:id="@+id/txtsexo"
            android:layout_width="220dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="18dp"
            android:background="@drawable/botongenero"
            android:ems="10"
            android:hint="   Genero"
            android:inputType="textPersonName"
            android:textColorHint="@android:color/background_light" />


        <Button
            android:id="@+id/btn_crear_ok"
            android:layout_width="220dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:background="@drawable/continuar_cuenta"
            android:text="" />
        <Button
            android:id="@+id/btn_crear_cancelar"
            android:layout_width="220dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            
            android:text="Cancelar" />
        <Space
            android:layout_width="match_parent"
            android:layout_height="80dp" />
        
    </LinearLayout>




</ScrollView>