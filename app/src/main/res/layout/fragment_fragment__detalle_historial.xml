<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kleberstevendiazcoello.ui.Activitys.DetalleHistorial"
    android:orientation="vertical"
    android:background="@android:color/white">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/celesteazul"
        >
        <ImageView
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:src="@drawable/botonatras"
            android:id="@+id/back_historial"/>
        <Space
            android:layout_width="20dp"
            android:layout_height="20dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Detalle Historial"
            android:padding="5dp"
            android:textSize="22sp"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textStyle="bold"/>

    </android.support.v7.widget.Toolbar>
    <Space
        android:layout_width="match_parent"
        android:layout_height="50dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fecha y Hora"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="30sp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textStyle="bold"
            android:textColor="@color/textonegrita"
            android:gravity="center"
            android:textSize="22sp"
            android:id="@+id/historialfecha"/>
        <Space
            android:layout_width="20dp"
            android:layout_height="30dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textStyle="bold"
            android:textColor="@color/textonegrita"
            android:gravity="center"
            android:textSize="22sp"
            android:id="@+id/historialhora"/>

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="50dp" />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/insulinaadministrada"
        android:gravity="center"
        android:textSize="20dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:textStyle="bold"
        android:textColor="@color/textonegrita"
        android:gravity="center"
        android:textSize="22sp"
        android:id="@+id/historialInsulina"/>
    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/totalcarbohidratos"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/dhistorialtotal"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center"

        android:textColor="@color/celesteazul"
        android:textSize="20dp" />


</LinearLayout>
