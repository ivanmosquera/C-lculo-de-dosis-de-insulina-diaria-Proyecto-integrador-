<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kleberstevendiazcoello.ui.Activitys.DetalleHistorial"
    android:orientation="vertical">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/celesteazul"
        >
        <ImageView
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:src="@drawable/botonatras"
            android:id="@+id/back_historial"/>
        <Space
            android:layout_width="20dp"
            android:layout_height="20dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Detalle Historial"
            android:padding="5dp"
            android:textSize="22sp"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textStyle="bold"/>

    </android.support.v7.widget.Toolbar>
    <Space
        android:layout_width="match_parent"
        android:layout_height="50dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text=" Alimentos Ingeridos"
        android:gravity="center"
        android:textSize="20dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="2017-12-18"
        android:gravity="center"
        android:textSize="20dp"
        android:id="@+id/historialfecha"/>
    <Space
        android:layout_width="match_parent"
        android:layout_height="50dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text=" Insulina Administrada"
        android:gravity="center"
        android:textSize="20dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text=""
        android:gravity="center"
        android:textSize="20dp"
        android:id="@+id/historialInsulina"/>
    <Space
        android:layout_width="match_parent"
        android:layout_height="50dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text=" Total Carbohidratos"
        android:gravity="center"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/dhistorialtotal"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center"

        android:textColor="@color/celesteazul"
        android:textSize="20dp" />


</LinearLayout>
