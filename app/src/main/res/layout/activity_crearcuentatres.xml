<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/partesuperiortresn"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"/>
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:text="Insuvida te ayudara a llevar el control de "
        android:textColor="@color/textonegrita"
        android:textSize="18dp" />
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="tu rutina alimenticia"
        android:textColor="@color/textonegrita"
        android:textSize="18dp" />


    <Spinner
        android:id="@+id/spinner"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="18dp"
        android:background="@drawable/genero"
        android:paddingLeft="2dp"/>

    <EditText
        android:id="@+id/txtciudad"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="18dp"
        android:background="@drawable/ubicacion"
        android:ems="10"
        android:hint="Ciudad"
        android:paddingLeft="10dp"
        android:inputType="textPersonName"
        android:textColorHint="@color/textonormal"/>

    <EditText
        android:id="@+id/txttelefono"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="18dp"
        android:background="@drawable/telefono"
        android:ems="10"
        android:hint="TelÃ©fono"
        android:paddingLeft="10dp"
        android:inputType="number"
        android:textColorHint="@color/textonormal"/>

    <Button
        android:id="@+id/btnconfirmarcuenta"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/confirmarcuenta"
        android:text="" />

    <Button
        android:id="@+id/btnregresarados"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:background="@drawable/regresarchange"
        android:text="" />


</LinearLayout>

