<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="240dp"
    android:layout_height="245dp"
    android:orientation="vertical"
    android:background="@color/celesteazul"
    android:padding="5dp"
    android:layout_gravity="center">
    <TextView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:textColor="@android:color/white"
        android:text="X"
        android:textStyle="bold"
        android:layout_gravity="end"
        android:gravity="center"
        android:id="@+id/txtpopcloseauto"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Insulina a administrar"
            android:layout_gravity="center"
            android:textColor="@android:color/white"
            android:textSize="20dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@android:color/white"
            android:textSize="30dp"
            android:id="@+id/totalinsulinadministrarauto"/>



    </LinearLayout>
    <Space
        android:layout_width="match_parent"
        android:layout_height="25dp" />
        <Space
            android:layout_width="30dp"
            android:layout_height= "2dp"/>
        <Button
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:id="@+id/btnguardarhistorialauto"
            android:background="@drawable/guardarconsultachange"
            android:layout_gravity="center"/>
        <Space
            android:layout_width="40dp"
            android:layout_height= "7dp"/>
        <Button
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:background="@drawable/nuevaconsultachange"
            android:id="@+id/btnnuevocalculoauto"
            android:layout_gravity="center"/>





</LinearLayout>