<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="14dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="14dp"
            android:orientation="horizontal">
            >
            <TextView
                android:layout_width="140dp"
                android:layout_height="30dp"
                android:textSize="15dp"
                android:text="Actividad FÃ­sica"/>
            <Spinner
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:id="@+id/spinnervida"
                ></Spinner>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"

            android:padding="14dp"
            android:orientation="horizontal">
            >
            <TextView
                android:layout_width="140dp"
                android:layout_height="30dp"
                android:text="Enfermo         "
                android:textSize="15dp"/>
            <Spinner
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:id="@+id/spinersalud"></Spinner>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="14dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nivel Glucosa Actual     : "
                android:textSize="15dp" />
            <EditText
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="14dp"

            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Nivel Glucosa objetivo   : "
                android:textSize="15dp" />
            <EditText
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                />


        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="30"
        android:padding="14dp"
        android:orientation="vertical">
        >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="120dp">
        <android.support.v7.widget.CardView
            android:id="@+id/calculo_manual"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardElevation="3dp"
            app:cardCornerRadius="3dp">


            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/rv_platosseleccionados"
                ></android.support.v7.widget.RecyclerView>
        </android.support.v7.widget.CardView>
        </ScrollView>
        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp"
            />
        <Button
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:id="@+id/agregarplatos"
            android:layout_gravity="center"
            android:background="@drawable/agregarplatoschange"/>
        <android.support.v4.widget.Space
            android:layout_width="wrap_content"
            android:layout_height="20dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="195dp"
                android:layout_height="wrap_content"
                android:text="    Total de Carbohidratos :            "
                android:textSize="15dp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 500 gr"
                android:id="@+id/sumatoria_corbogidratos"
                android:textColor="@color/celesteazul"/>

        </LinearLayout>
        <android.support.v4.widget.Space
            android:layout_width="wrap_content"
            android:layout_height="20dp" />
        <Button
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:background="@drawable/calculardosisschange"
            android:id="@+id/btn_calcular_dosis"
            />
        <android.support.v4.widget.Space
            android:layout_width="wrap_content"
            android:layout_height="20dp" />
    </LinearLayout>
    
</LinearLayout>
