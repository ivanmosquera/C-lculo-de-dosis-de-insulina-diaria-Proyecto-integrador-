<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/celesteazul"
    tools:context="com.example.kleberstevendiazcoello.ui.login.MainActivity"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="120dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        app:srcCompat="@mipmap/ic_launcher" />

    <EditText
        android:id="@+id/txtcorreolog"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:layout_marginTop="41dp"
        android:layout_gravity="center"
        android:background="@drawable/botonusuario"
        android:ems="10"
        android:hint="Correo"
        android:paddingLeft="10dp"
        android:inputType="textPersonName"
        android:textColorHint="@android:color/background_light"
        android:textSize="15dp"
        />

    <EditText
        android:id="@+id/txtpasswordlog"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="11dp"
        android:background="@drawable/botoncontrasenac"
        android:ems="10"
        android:hint="ContraseÃ±a"
        android:inputType="textPassword"
        android:paddingLeft="10dp"
        android:layout_marginBottom="20dp"
        android:textColorHint="@android:color/background_light"
        android:textSize="15dp" />

    <Button
        android:id="@+id/btn_crear_ok"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:background="@drawable/ingresar_login"
        android:text="" />

    <Button
        android:id="@+id/btncrearcuenta"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:background="@drawable/go"
        android:text="" />




</LinearLayout>
