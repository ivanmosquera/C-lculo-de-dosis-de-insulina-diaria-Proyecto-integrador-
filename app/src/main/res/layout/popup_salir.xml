<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="240dp"
    android:layout_height="245dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/celesteazul"
    android:padding="5dp"
    android:orientation="vertical"
    app:cardElevation="8dp"
    app:cardCornerRadius="8dp"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/celestenuevo">
        <TextView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:textColor="@android:color/white"
            android:text=""
            android:textStyle="bold"
            android:layout_gravity="end"
            android:gravity="center"
            android:id="@+id/txtpopclose"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Estas por cerrrar sesiÃ³n"
                android:layout_gravity="center"
                android:textColor="@android:color/white"
                android:textSize="20dp" />
            <Space
                android:layout_width="20dp"
                android:layout_height="10dp" />

          <ImageView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:src="@drawable/botonsalir"
              android:layout_gravity="center"/>

        </LinearLayout>
        <Space
            android:layout_width="20dp"
            android:layout_height="10dp" />
        <Button
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:id="@+id/salirapppop"
            android:background="@drawable/salirchange"
            android:layout_gravity="center"/>
        <Space
            android:layout_width="40dp"
            android:layout_height= "7dp"/>
        <Button
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:background="@drawable/cancelarplatochange"
            android:layout_gravity="center"
            android:id="@+id/cancelarsalida"/>

    </LinearLayout>




</LinearLayout>